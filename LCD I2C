// C++ code
//
#include <Adafruit_LiquidCrystal.h>

Adafruit_LiquidCrystal lcd(0);  // Dirección 0x27, 16 columnas, 2 filas

void setup() {
  lcd.begin(16,2);                   // Inicializa el LCD              // Enciende la retroiluminación
  lcd.setCursor(0,0);               // Establece el cursor en la posición 0,0
  lcd.print("Hola Mundo");        // Imprime el mensaje
}

void loop() {
  // No es necesario ningún código en el loop para este ejemplo simple
}
